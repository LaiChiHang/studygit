#include <stdio.h>
#include <unistd.h>
#include <stdint.h>
#include <math.h>
#include <stdlib.h>


//按照10HZ频率输出格式
void print_hz(useconds_t hz,char *str)
{
    usleep(hz);
    printf("%s\n",str);
}

//输入16进制数字FDECBA9876543210 输出0123456789abcdef
uint64_t swap_bit(uint64_t x)
{
	int i;
	for(i=1;i<16;i++)
	{
	x = ((x<<4)+i);
	}
	return x;
} 

//按位翻转，加快操作速度
unsigned int reverse_bit(unsigned int num，int b)
{
  int i;
  unsigned int bit;
  unsigned int new_num = 0;
  for (i = 0; i < b; i++)
  {
    bit = num & 1;            
    new_num = new_num << 1;            
    new_num = new_num | bit;   
    num = num >> 1;                
  }
  return new_num;
}


int main()
{
  char str[14] ={"hello world!"};
  uint64_t a,b;
  
   //16进制转换成四个字节的数组
   /* unsigned long long x=0x11223344; int i,c[4];
   for(i=0;i<4;i++) 
	{
	  c[i]=(x>>(i*8))& 0xFFFFFF; printf("%x\n",c[i]); 
	} */

  printf("输入的是：");
  scanf("%lx",&a);
  b = swap_bit(a);
  printf("最后翻转：%lx\n",b); 

  while(1)
      print_hz(100000,str);

   return 0;

}
